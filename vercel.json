{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/sendgrid",
      "methods": ["POST", "OPTIONS"],
      "dest": "./api/sendgrid.js"
    },
    {
      "src": "/api/images",
      "methods": ["GET", "POST"],
      "dest": "./api/images.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "./api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "./index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}
